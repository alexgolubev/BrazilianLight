extends layout

block content
                           
  div(style="padding-left: 20px")
     h1= 'Change password'
     p For security reasons, please change your password:
     div(id="ctl00_Div2" style="padding:20px" class="container")
      if message
         div(class="alert alert-danger")!= message
      form(action="/changepassword" method="post")
        div(class="textentry")
         input(name="pass" type="password" id="pass" class="passwordEntry" placeholder="Password")
        div(class="textentry")
         input(name="repass" type="password" id="repass" class="passwordEntry" placeholder="Re-enter Password")
        div(class="buttons")
           input(type="submit" class="button" value="Change")
 
  div(class="footer" style="margin-top:20px;")
     div(style="padding:5px;")
        img(src="images/map.png", alt="Netlight", style="border-width:0px; width: 50px")
