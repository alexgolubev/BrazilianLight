doctype html
html(lang='en')
   head
     title= 'BrazilianLight'
     link(href='/css/bootstrap.min.css', rel='stylesheet')
     link(href='/css/bl.css', rel='stylesheet')
     script(type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js")
     script(type="text/javascript" src="/javascripts/bootstrap.min.js")
     meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
     meta(http-equiv='X-UA-Compatible', content='IE=edge')
     meta(name='viewport', content='width=device-width, initial-scale=1, user-scalable=0')
     meta(name='robots', content='noindex, nofollow')
     link(rel='shortcut icon', href='/images/BL2.png')


     if scripts
       each script in scripts
          script(type='text/javascript', src=script)
   body
     if loggedIn
        .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
            .container
                .navbar-header
                    button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                        
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar

                    - activate = ""
                    - if (menu == 'today')
                        - activate = "active"

                    a.navbar-brand(style="padding:0px;" href="/")
                      img(src="/images/BL2.png")
                    a.navbar-brand(style='margin-left: 0px;', href='/', class=activate) Today
                    - activate = ""
                        - if (menu == 'calendar')
                            - activate = "active"
                    a.navbar-brand(style='margin-left: 0px;', href='/calendar', class=activate) Calendar
                    - activate = ""
                        - if (menu == 'ranking')
                            - activate = "active"
                    //a.navbar-brand(style='margin-left: 0px;', href='/ranking', class=activate) Rank

                .collapse.navbar-collapse
                    ul.nav.navbar-nav

                        li
                            a(href="/ranking") Rank

                    ul.nav.navbar-nav.navbar-right
                        - activate = ""
                        - if (menu == 'help')
                            - activate = "active"
                        li(class=activate)
                            a(href='/help') Help
                        li
                            a(href='/logout') Logout
block content