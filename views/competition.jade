extends layout

block content
                           
  div(style="padding-left: 20px")
     h1= title
     p So far, the World Cup is going strong! Check the results below!
  #matches
        div(id="ctl00_Div2" style="padding:20px" class="container").match
           - each match in matches
          
            h1= match.typ + ' vs. ' + match.hemma
            fieldset
               p
                  div.result(style="font-weight:bold")= 'Result: ' + match.resultat
                  div.group= 'Grupp: ' + match.grupp
                  div.date= 'Datum: ' + match.datum
    
            div(class="buttons")
               input(type="submit" class="button" value="Predict Now!")
               
               
  div(class="footer" style="margin-top:20px; position:relative !important;")
     div(style="padding:5px;")
        img(src="images/armadillo.png", alt="Netlight", style="border-width:0px; width: 50px")